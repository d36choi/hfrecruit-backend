{{>layout/header}}
<div id="wrapper">

    {{>layout/sidebar}}
    {{>layout/topnavbar}}
    <div id="mypage">
        <div class="title-card">
            <b>마이페이지</b>
            <a class="btn btn-primary btn-right" id="btn-logout" href="#" role="button">로그아웃</a>
        </div>
        <div class="welcome-card text-center">
            <div class="welcome-card-body">
                <h5 class="welcome-card-title">{{user.username}}님, 환영합니다!</h5>
                <p class="welcome-card-text">회원님은 {{user.role}}입니다.</p>
            </div>
        </div>
        {{!#role.person}}
        <div class="container">
            <div class="mypage-wrapper">
                <a type="button" class="btn btn-outline-secondary" href="/application/list/active">
                    <span class="text-monospace">진행중인 지원서</span>
                    <span class="text">{{activeApplication}}</span>
                </a>
                <a type="button" class="btn btn-outline-secondary" href="/application/list/writing">
                    <span class="text-monospace">작성중인 지원서</span>
                    <span class="text">{{writingApplication}}</span>
                </a>
                <a type="button" class="btn btn-outline-secondary" href="/specs">
                    <span class="text-monospace">내 스펙보기</span>
                    <span class="text">{{!spec}}</span>
                </a>
            </div>
            <a type="button" class="btn btn-outline-warning" href="/profile">정보 수정하기</a>
            <a type="button" class="btn btn-outline-danger" id="btn-deleteUser" href="#">탈퇴하기</a>
        </div>
        {{!/role.person}}
    </div>
</div>
{{>layout/footer}}
