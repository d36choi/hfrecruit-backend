{{>layout/header}}

<div id="wrapper">

    {{>layout/sidebar}}
    {{>layout/topnavbar}}
    <div id="application">
        <div class="title-card">
            <input type="hidden" class="form-control" id="applicationId" value={{application.applicationId}} readonly>
        </div>
        <div>
            <div class ="recruit-title" style="font-size: 1.5em; padding: 3% 3%  3%;">
                {{recruit.recruitTitle}}
                <input type="hidden" class="form-control" id="recruitNo" value={{recruit.recruitNo}} readonly>-->
                <hr style="margin:0">
            </div>
            <div style="margin:3%; border: #999999">
                <div class="card shadow" style="margin: 1.25rem">
                    <div class="card-header">
                        <h4 style="float: left">내 프로필</h4>
                        <div class="row justify-content-md-end">
                            <a class="btn btn-dark" href="/profile">수정하기</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row justify-content-md-between m-4">
                            <div class="cols-4">
                                <h6>이름</h6>
                                <h4>{{sideUser.username}}</h4>
                            </div>
                            <div class="cols-4">
                                <h6>이메일</h6>
                                <h4>{{sideUser.email}}</h4>
                            </div>
                            <div class="cols-4">
                                <h6>주소</h6>
                                <h4>{{sideUser.address}}
                                    {{^sideUser.address}}입력하지 않음{{/sideUser.address}}
                                </h4>
                            </div>
                        </div>
                        <div class="row justify-content-md-between m-4">
                            <div class="cols-4">
                                <h6>성별</h6>
                                <h4>{{sideUser.gender}}
                                    {{^sideUser.gender}}입력하지 않음{{/sideUser.gender}}</h4>
                            </div>
                            <div class="cols-4">
                                <h6>생일</h6>
                                <h4>{{sideUser.birth}}
                                    {{^sideUser.birth}}입력하지 않음{{/sideUser.birth}}</h4>
                            </div>
                            <div class="cols-4">
                                <h6>대학</h6>
                                <h4>{{sideUser.college}}
                                    {{^sideUser.college}}입력하지 않음{{/sideUser.college}}</h4>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="specInfo mt-4 mb-5">
                    <div >
                        <h5>스펙 및 자격증 정보 </h5>
                    </div>
                    <div class="form-group mt-4 col-sm-5 mb-5">
                        <select class="form-control show-tick">
                            <option value="" selected disabled>스펙 가져오기 </option>
                            <option>재학 </option>
                            <option>졸업 </option>
                        </select>
                    </div>
                </div>

                <div class="answers mt-4" style="position:relative; overflow-y: scroll;">
                    <div>
                        <h5>답변 작성 </h5>
                    </div>
                    <div >
                        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist" style="width: 100%">
                            <li class="nav-item">
                                <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#v-pills-q1" role="tab" aria-controls="pills-home" aria-selected="true">질문 1</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#v-pills-q2" role="tab" aria-controls="pills-profile" aria-selected="false">질문 2</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#v-pills-q3" role="tab" aria-controls="pills-contact" aria-selected="false">질문 3</a>
                            </li>
                        </ul>
                        <div class="tab-content " id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="v-pills-q1" role="tabpanel" aria-labelledby="v-pills-home-tab">
                                <h4 id="list-item-2">질문 1</h4>
                                <label for="q1Comment">{{recruit.question1}}</label>
                                <textarea class="form-control" id="q1Comment" rows="15">{{application.q1Comment}}</textarea>
                            </div>
                            <div class="tab-pane fade" id="v-pills-q2" role="tabpanel" aria-labelledby="v-pills-profile-tab">
                                <h4 id="list-item-2">질문 2</h4>
                                <label for="q2Comment">{{recruit.question2}}</label>
                                <textarea class="form-control" id="q2Comment" rows="15">{{application.q2Comment}}</textarea>
                            </div>
                            <div class="tab-pane fade" id="v-pills-q3" role="tabpanel" aria-labelledby="v-pills-messages-tab">
                                <h4 id="list-item-2">질문 3</h4>
                                <label for="q3Comment">{{recruit.question2}}</label>
                                <textarea class="form-control" id="q3Comment" rows="15">{{application.q3Comment}}</textarea>
                            </div>
                            <div class="progress mt-5 mb-5">
                                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
                            </div>
                            <div class="submit" >
                                <a type="button" id="btn-application-edit" class="btn btn-primary" style="float: right;margin: 0.5%; color:white" href="#">수정하기 </a>
                                <a type="button" id="btn-application-edittemp" class="btn btn-warning" style="float: right;margin: 0.5%;" href="#">임시저장 </a>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>




</div>



{{>layout/footer}}