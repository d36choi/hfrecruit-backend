{{>layout/header}}

<div id="wrapper">

    {{>layout/sidebar}}
    {{>layout/topnavbar}}

    <div>
        <input type="hidden" class="form-control" id="companyNo" value={{company.companyNo}} readonly>
        <div style="margin:3%; border: #999999">
            <div class="companyInfo mb-5">
                <form class="needs-validation" style="margin-top: 4%" enctype="multipart/form-data" novalidate>
                    <div class="form-row" style="margin-bottom: 5%">
                        <div class="form-group ml-1 mr-5 col-sm-3">
                            <label for="companyName">기업명</label>
                            <input type="text" class="form-control" id="companyName" value="{{company.companyName}}">
                        </div>
                        <div class="form-group ml-1 mr-5 col-sm-3">
                            <label for="companyEmail">기업이메일</label>
                            <input type="text" class="form-control" id="companyEmail" value="{{company.companyEmail}}">
                        </div>
                        <div class="form-group ml-1 mr-5 col-sm-3">
                            <label for="companyPage">기업페이지</label>
                            <input type="text" class="form-control" id="companyPage" value="{{company.companyPage}}">
                        </div>
                    </div>
                    <div class="form-row" style="margin-bottom: 5%">
                        <div class="form-group ml-1 mr-5 col-sm-5">
                            <label for="managerId">관리자이메일</label>
                            <input type="text" class="form-control ml-1" id="managerId" value="{{company.managerId}}">
                        </div>
                        <div class="form-group ml-1 mr-5 col-sm-5">
                            <label for="companyLogo">기업로고</label>
                            <div class="select_img">
                                <input type="file" class="form-control ml-1" id="companyLogo1" name="file"/>
                                <input type="text" class="form-control ml-1" id="companyLogo" value="{{company.companyLogo}}">
                                <!--                                <label class="custom-file-label" for="customFile">파일을 선택해 주세요.</label>-->
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <label>
                                <input class="form-check-input" type="checkbox" value="personal-info" id="gridCheck">
                                정보 제공에 동의합니다.
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <button type="button" class="btn btn-primary" style="float: right;margin: 0.5%; color:white"
                    id="btn-companyInfo-update">수정하기
            </button>
        </div>
    </div>
</div>

