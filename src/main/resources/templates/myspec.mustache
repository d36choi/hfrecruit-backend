{{>layout/header}}

<div id="wrapper">

    {{>layout/sidebar}}
    {{>layout/topnavbar}}
    <h3 id="userNo">{{user.userNo}}</h3>
    <!--  my spec page  -->
<!--    https://asfirstalways.tistory.com/295-->
    <form class="mt-3 mx-sm-5 mb-2 justify-content-center">
        <div class="form-row justify-content-center">
            <div class="form-group ml-1 mr-5 col-sm-5">
                <label for="specId">스펙</label>
                <select id="selectSpecId" class="form-control" id="specId">
                    {{#specs}}
                    <option id="{{specId}}">{{specName}}</option>
                    {{/specs}}
                </select>
            </div>
            <div class="form-group ml-1 mr-5 col-sm-5">
                <label for="score">점수</label>
                <input type="text" class="form-control" id="score"
                       placeholder="점수">
            </div>
        </div>
        <div class="form-row justify-content-center">
            <div class="form-group ml-1 mr-5 col-sm-5">
                <label for="certifiedDate">취득일</label>
                <input type="date" class="form-control" id="certifiedDate"
                       placeholder="">
            </div>
            <div class="form-group ml-1 mr-5 col-sm-5">
                <label for="authDate">유효일</label>
                <input type="date" class="form-control" id="authDate"
                       placeholder="">
            </div>
        </div>
        <button type="button" class="btn btn-primary" id="btn-spec-save"><i class="fas fa-plus-square mr-1"></i>등록</button>

    </form>

    <br style="border: 1px solid darkgrey">

    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <td>자격증 이름</td>
            <td>만료일</td>
            <td>점수</td>
            <td>삭제</td>
        </tr>
        </thead>
        <tbody id="tbody">
<!--        머스태치문법을 통해 specName list 와 PersonalSpec list 를 모두 순회해야함-->
        {{#mySpecs}}
        <tr>
            <td>{{spec.specName}}</td>
            <td>{{certifiedDate}}</td>
            <td>{{score}}</td>
<!--            <td class="btn btn-warning">수정</td>-->
            <td class="btn btn-danger" id="btn-spec-delete" name="{{personalSpecId}}">삭제</td>
        </tr>
        {{/mySpecs}}
        </tbody>
    </table>
</div>

{{>layout/footer}}