{{>layout/header}}

<div id="wrapper">

    {{>layout/sidebar}}
    <div class="title-card">
        <h3>새로운 기업 등록하기</h3>
        <input type="hidden" class="form-control" id="userNo" value={{!userNo}} readonly>
    </div>
    <div>
        <div style="margin:3%; border: #999999">
            <div class="companyInfo mb-5">
                <form class="justify-content-center mt-4">
                    <div class="form-row" style="margin-bottom: 5%">
                        <div class="form-group ml-1 mr-5 col-sm-3">
                            <label for="companyName">기업명</label>
                            <input type="text" class="form-control" id="companyName" placeholder="기업명을 입력해주세요">
                        </div>
                        <div class="form-group ml-1 mr-5 col-sm-3">
                            <label for="companyEmail">기업이메일</label>
                            <input type="text" class="form-control" id="companyEmail" placeholder="이메일을 입력해주세요">
                        </div>
                        <div class="form-group ml-1 mr-5 col-sm-3">
                            <label for="companyPage">기업페이지</label>
                            <input type="text" class="form-control" id="companyPage" placeholder="ex) http://@@@.com">
                        </div>
                    </div>
                    <div class="form-row" style="margin-bottom: 5%">
                        <div class="form-group ml-1 mr-5 col-sm-5">
                            <label for="managerId">관리자이메일</label>
                            <input type="text" class="form-control ml-1" id="managerId" value="{{companyUser}}">
                        </div>
                        <div class="form-group ml-1 mr-5 col-sm-5">
                            <label for="companyLogo">기업로고</label>
                            <input type="text" class="form-control ml-1" id="companyLogo"
                                   placeholder="{.{companyLogo}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="gridCheck">
                            <label class="form-check-label" for="gridCheck">
                                개인정보 제공에 동의합니다.
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <button type="button" class="btn btn-primary" style="float: right;margin: 0.5%; color:white"
                    id="btn-companyInfo-save">등록
            </button>
        </div>
    </div>
</div>
{{>layout/footer}}